{
    "variables": {
    "subscription_id": "{{env `SUBSCRIPTION_ID`}}",
    "client_id": "{{env `SERVICE_PRINCIPAL_ID`}}",
    "client_secret": "{{env `SERVICE_PRINCIPAL_PASSWORD`}}",
    "tenant_id": "{{env `TENANT_ID`}}",
    "location": "{{env `LOCATION`}}",
    "managed_image_resource_group_name": "{{env `RESOURCE_GROUP`}}",
    "os_type": "",
    "image_publisher": "",
    "image_offer": "",
    "image_sku": "",
    "vm_size": ""
  },
  "builders": [{
    "type": "azure-arm",

    "client_id": "{{user `client_id`}}",
    "client_secret": "{{user `client_secret`}}",
    "tenant_id": "{{user `tennant_id`}}",
    "subscription_id": "{{user `subscription_id`}}",

    "os_type": "{{user `os_type`}}",
    "image_publisher": "{{user `image_publisher`}}",
    "image_offer": "{{user `image_offer`}}",
    "image_sku": "{{user `image_sku`}}",

    "vm_size": "{{user `vm_size`}}",

    "managed_image_resource_group_name": "{{user `managed_image_resource_group_name`}}",
    "managed_image_name": "{{user `managed_image_name`}}",
    "location": "{{user `location`}}"
  }],
  "provisioners": [
    {
      "type": "ansible",
      "groups": ["{{ user `ansible_group` }}"],
      "playbook_file": "{{ user `playbook_file` }}",
      "ansible_env_vars": [
          "ANSIBLE_ROLES_PATH=/ansible/roles"
      ]
    },
    {
      "type": "ansible",
      "groups": ["{{ user `ansible_group` }}"],
      "playbook_file": "/ansible/jenkins-packer.yml",
      "ansible_env_vars": [
          "ANSIBLE_ROLES_PATH=/ansible/roles"
      ]
    },
    {
     "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
     "inline": [
       "systemctl disable apt-daily-upgrade.timer",
       "systemctl disable apt-daily.timer",
       "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
     ],
     "inline_shebang": "/bin/sh -x",
     "type": "shell"
   }
  ]
}
